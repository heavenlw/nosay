<Alloy>
	<Collection src="Venue"/>
	<Collection src="detail"/>
	<TabGroup>
		<Tab title="Tab 1" icon="KS_nav_ui.png" id="mainTab">
			<Window title="Tab 1">
				<TableView dataCollection="detail" dataTransform="transformFunction" onClick="eventClick">
					<TableViewRow layout="vertical" eid="{id}">
						<ImageView image="{image}"toy="20dp"/>
						<Label text="{organizer}" bottom="20dp"/>
					</TableViewRow>
				</TableView>
			</Window>
		</Tab>
		<Tab title="Tab 2" icon="KS_nav_views.png"id="eventTab">
			<Window title="Tab 2">
				<TableView onClick="tableClick">
					<TableViewSection headerTitle="University Offices">
						<TableViewRow title="office of student affair" fid="oosa"/>
						<TableViewRow title="Academic Registry" fid="ar"/>
					</TableViewSection>
					<TableViewSection headerTitle="Faculty of Science">
						<TableViewRow title="computer" fid="comp"/>
						<TableViewRow title="Maths" fid="Maths"/>
					</TableViewSection>
				</TableView>
			</Window>
		</Tab>
		<Tab title="Tab 3" icon="KS_nav_views.png" id="LocalTab">
			<Window title="Tab 3">
				<TableView onClick="locationClick" dataCollection="Venue" dataTransform="group">
					<TableViewSection headerTitle="{SubTitle}">
						<TableViewRow title="{VenueName}" fid="{VenueID}"/>
					</TableViewSection>
				</TableView>
			</Window>
		</Tab>
		<Tab title="Tab 4" icon="KS_nav_views.png" id="locationTab">
			<Window title="Tab 4">
				<Module id="mapView" module="ti.map" method="createView" userLocation="true" dataCollection="Venue" dataTransform="transform" onClick="mapClicked"/>
			</Window>
		</Tab>
		<Tab title="Tab 5" icon="KS_nav_views.png">
			<Window title="Tab 5">
				<View id="view" borderColor="black" borderRadius="0"  width="100" height="100"  left="5"  top="5" >
					<ImageView id="image" image="http://awol.azurewebsites.net/st.jpg" />
				</View>
				<View id="view" borderColor="black" borderRadius="0"  width="auto" height="100"  left="105"  top="5"  right="5" >
					<Label>Awol Law</Label>
				</View>
				<TableView onClick="Tab5Click" left="5" top=110>
					
						<TableViewRow title="LogOff" fid="logOff"/>
						<TableViewRow title="Registered Event" fid="reg_event"/>
				        <TableViewRow title="About Us" fid="about_us"/>
					
				</TableView>
				
			</Window>
		</Tab>
	</TabGroup>
</Alloy>